@using System
@{
    Layout = null;
}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>BETMart Notification</title>
    <link rel="stylesheet" href="https://app.ecert.co.za/email.css" type="text/css" />
</head>
<body>
    <table class="body-wrap">
        <tr>
            <td></td>
            <td class="container" width="600">
                <div class="content">
                    <table class="main" width="100%" cellpadding="0" cellspacing="0">
                        <tr>
                            <td class="content-wrap">
                                <table cellpadding="0" cellspacing="0">
                                    <tr>
                                        <td>
                                            <img class="img-fluid" src="https://betmart.azurewebsites.net/assets/images/logo.png" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="content-block">
                                            <h3>@Model.HeaderText</h3>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="content-block">
                                            @Model.Content
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                    <h4>Products</h4>
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>Photo</th>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var orderDetail in Model.OrderDetails)
                        {
                            <tr>
                                <td width="150"><img src="data:image;base64,@Convert.ToBase64String(orderDetail.Product.Image)" alt="iMac" width="80"></td>
                                <td width="550">
                                    <h5 class="font-500">@orderDetail.Product.Name</h5>
                                    <p>@orderDetail.Product.Description</p>
                                </td>
                                <td>@orderDetail.Price</td>
                                <td>@orderDetail.Quantity</td>
                                <td width="150" align="center" class="font-500">@orderDetail.Total</td>
                            </tr>}
                        <tr>
                            <td colspan="4" class="font-500" align="right">Total Amount</td>
                            <td class="font-500">@Model.TotalCost</td>
                        </tr>
                        </tbody>
                    </table>
                    <div class="footer">
                        <table width="100%">
                            <tr>
                                <td class="aligncenter content-block"><a href="#">eCert</a></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </td>
            <td></td>
        </tr>
    </table>

</body>
</html>


